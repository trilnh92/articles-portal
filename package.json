{
    "name": "articles-portal",
    "version": "0.1.0",
    "author": "Tri Le Nguyen Huu",
    "private": true,
    "dependencies": {
        "bootstrap": "^4.3.1",
        "mobx": "^5.9.4",
        "mobx-react": "^5.4.4",
        "node-sass": "^4.12.0",
        "nuka-carousel": "^4.5.6",
        "react": "^16.8.6",
        "react-app-rewire-mobx": "^1.0.9",
        "react-dom": "^16.8.6",
        "react-google-maps": "^9.4.5",
        "react-progressive-image": "^0.6.0",
        "react-router-dom": "^5.0.0",
        "react-scripts": "^3.0.1",
        "react-select": "^2.4.3",
        "reactstrap": "^8.0.0"
    },
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "lint": "eslint **/*.js --ignore-pattern node_modules/",
        "test": "react-app-rewired test --env=jsdom",
        "eject": "react-app-rewired eject",
        "server": "http-server ./build -p 9000 -o",
        "prod": "npm run build && npm run server",
        "deploy": "npm run build && surge --project ./build --domain https://articles-portal.surge.sh"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "babel-plugin-styled-components": "^1.10.0",
        "customize-cra": "^0.2.12",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-config-react-app": "^4.0.1",
        "eslint-plugin-flowtype": "^3.9.0",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.13.0",
        "husky": "^2.3.0",
        "lint-staged": "^8.1.7",
        "prettier": "^1.17.1",
        "pretty-quick": "^1.11.0",
        "react-app-rewired": "^2.1.3"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "pretty-quick --staged",
            "eslint src/ --fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
